<h1>Aim作成</h1>

<%= form_with(model: @aim, url: aim_index_path, local: true) do |form| %>
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <%= content_tag :div, msg, class: "alert alert-#{name == :notice ? 'success' : 'danger'}" %>
    <% end %>
  <% end %>

  <% if @aim.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@aim.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @aim.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "送信" %>
  </div>
<% end %>
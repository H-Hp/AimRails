<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
   <url>
      <loc><%= @domain %></loc>
      <lastmod><%= @latest_aim_createdAt %></lastmod>
      <changefreq>always</changefreq>
      <priority>1.0</priority>
   </url>

   <url>
      <loc><%= @domain %>/llm</loc>
      <lastmod>2023-12-12T10:51:23+09:00</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
   </url>

   <url>
      <loc><%= @domain %>/play</loc>
      <lastmod><%= @latest_play_chat_created %></lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
   </url>

  <% @aims.each do |aim| %>
    <url>
      <loc><%= "#{@domain}/aim/#{aim.id}" %></loc>
      <lastmod><%= aim.updated_at.in_time_zone("Tokyo").iso8601 %></lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
   <% end %>
</urlset>
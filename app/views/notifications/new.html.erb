<%= stylesheet_link_tag "create-edit" %>

<div class="create-form">
  <h2>通知を作成(全体告知)</h2>
  <%= form_with(model: @notifications, html:{ class:"edit-form",id:"edit-form" }) do |form| %>
    <div class="field">
      <%= form.number_field :user_id, required: true, placeholder: "1", class: "title", id:"title",value:1 %>
      <%= form.number_field :sended_id, required: true, placeholder: "送信者(運営/ユーザー)", class: "URL", id:"URL",value:5 %><br>
      <%= form.text_field :title, required: true, placeholder: "タイトル", class: "title", id:"title" ,value:"title" %>
      <%= form.text_field :url, required: true, placeholder: "URL", class: "URL", id:"URL" ,value:"/" %><br>
      <%= form.text_field :image_url, required: true, placeholder: "画像URL(default)", class: "URL", id:"URL",value:"default" %><br>
      <%= form.text_field :action, required: true, placeholder: "action(news/signup)", class: "URL", id:"URL",value:"news" %><br>
      
    </div>
    <%= form.submit "送信", class: "submit-button" %>
  <% end %>
</div>
<!--< form.check_box :checked, required: true %>-->

<div class="delete">
  <h2>通知を削除</h2>
  <p>checkがtrueのものを全削除</p>
  <p>actionを指定して全削除</p>
</div>

